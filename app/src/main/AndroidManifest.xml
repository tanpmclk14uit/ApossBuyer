<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aposs_buyer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:usesCleartextTraffic="true"
        android:name=".ApossBuyerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_w"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_w"
        android:supportsRtl="true"
        android:theme="@style/Theme.Apossbuyer">
        <activity android:name=".uicontroler.activity.UserDetailActivity"/>
        <activity
            android:name=".uicontroler.activity.CartSecondActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.AboutUsActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.RatingActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.OrderActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.NotificationActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.AddressActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".uicontroler.activity.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.CategoryActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.DetailProductActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>