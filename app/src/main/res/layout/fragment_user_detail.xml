<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.aposs_buyer.viewmodel.UserDetailViewModel" />
    </data>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".uicontroler.fragment.UserDetailFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".uicontroler.fragment.MessageFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/back_ground"
            android:text="@string/app_name"
            app:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:liftOnScroll="false">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandedTitleGravity="top"
                app:layout_scrollFlags="noScroll">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/light_green"
                    android:gravity="bottom"
                    android:orientation="vertical"/>

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    app:layout_collapseMode="pin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:paddingBottom="15dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            >

                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/img_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:contentDescription="@string/image"
                                android:src="@drawable/ic_back_white" />
                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/my_details"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                            <androidx.coordinatorlayout.widget.CoordinatorLayout
                                android:layout_width="33dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true">
                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="bottom|left"
                                android:contentDescription="@string/image"
                                app:tint="@color/white"
                                android:src="@drawable/ic_cart"
                                android:id="@+id/img_cart"
                                tools:ignore="RtlHardcoded" />
                                <TextView
                                    android:layout_gravity="right|top"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/bg_quantity_in_cart"
                                    android:textSize="10dp"
                                    android:text="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    tools:ignore="RtlCompat" />
                            </androidx.coordinatorlayout.widget.CoordinatorLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ln_havingAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginHorizontal="18dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:background="@drawable/bg_edit_info"
                                android:gravity="center">

                                <com.google.android.material.imageview.ShapeableImageView
                                    imagesPath="@{viewModel.currentUser.image.imageUri}"
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:background="@drawable/bg_edit_info"
                                    android:scaleType="centerCrop"
                                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/edit_user_detail_color"
                        android:textSize="14dp"
                        android:layout_marginBottom="10dp"/>
                    <EditText
                        android:id="@+id/et_Name"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="@{viewModel.currentUser.name}"
                        android:textSize="16dp"
                        android:paddingStart="15dp"
                        android:maxLines="1"
                        android:background="@drawable/bg_edit_user_detail"
                        android:layout_marginBottom="15dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/edit_user_detail_color"
                        android:textSize="14dp"
                        android:layout_marginBottom="10dp"/>
                    <EditText
                        android:id="@+id/et_email"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:textSize="16dp"
                        android:text="@{viewModel.currentUser.email}"
                        android:paddingStart="15dp"
                        android:maxLines="1"
                        android:background="@drawable/bg_edit_user_detail"
                        android:layout_marginBottom="15dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthday"
                        android:textColor="@color/edit_user_detail_color"
                        android:textSize="14dp"/>
                     <EditText
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:textSize="16dp"
                         android:editable="false"
                         android:id="@+id/et_birthday"
                        android:paddingStart="15dp"
                         android:paddingEnd="15dp"
                         android:text="@{viewModel.currentUser.birthdayByString}"
                         android:maxLines="1"
                         android:drawableEnd="@drawable/ic_drop"
                        android:background="@drawable/bg_edit_user_detail"
                        android:layout_marginBottom="15dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="@color/edit_user_detail_color"
                        android:textSize="14dp"
                        android:layout_marginBottom="10dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:textSize="16dp"
                        android:background="@drawable/bg_edit_user_detail"
                        android:layout_marginBottom="15dp"
                        app:endIconDrawable="@drawable/ic_drop"
                        app:boxStrokeColor="#9D9EA3"
                        app:hintTextColor="#000000"
                        android:alpha="1"
                        app:endIconTint="#8F5F43"
                        app:boxStrokeWidthFocused="0dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
                        <AutoCompleteTextView
                            android:id="@+id/actv_gender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingTop="2dp"
                            android:hint="@{viewModel.currentUser.genderString}"
                            android:inputType="none"
                            android:backgroundTint="#00000000"
                            android:textSize="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_saveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="30dp"
                    android:text="Save changes"
                    android:layout_marginBottom="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:background="@drawable/select_bg_button"
                    android:layout_marginHorizontal="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_info"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </ScrollView>
</RelativeLayout>
</layout>