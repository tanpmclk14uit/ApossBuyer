<resources>
    <!-- Base application theme. -->
    <style name="Theme.Apossbuyer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/disable_pray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <!--     default text style-->
        <item name="android:textSize">14sp</item>
        <item name="android:screenOrientation">locked</item>
        <item name="android:statusBarColor">@color/primary_green</item>
        <item name="colorAccent">@color/primary_green</item>
        <item name="android:colorPrimaryDark">@color/primary_green</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">

        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/bg_ln_bottom_address</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:typeface">monospace</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="Theme.Apossbuyer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Apossbuyer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Apossbuyer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>